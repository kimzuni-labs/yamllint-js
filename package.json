{
  "name": "yamllint-js",
  "description": "A linter for YAML files â€” an unofficial native Node.js port of Python yamllint.",
  "version": "0.2.0",
  "license": "GPL-3.0-or-later",
  "type": "module",
  "author": {
    "name": "kimzuni",
    "email": "me@zuni.kim",
    "url": "https://github.com/kimzuni"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kimzuni-labs/yamllint-js.git"
  },
  "homepage": "https://github.com/kimzuni-labs/yamllint-js",
  "bugs": "https://github.com/kimzuni-labs/yamllint-js/issues",
  "scripts": {
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --coverage --ui",
    "lint": "markdownlint-cli2 && npm run lint:yaml && eslint . && tsc --noEmit",
    "lint:eslint": "eslint .",
    "lint:types": "tsc --noEmit",
    "lint:markdown": "markdownlint-cli2",
    "lint:yaml": "node dist/main.mjs -c yamllint.self.config.js . 2> /dev/null || tsx src/main.ts -c yamllint.self.config.js .",
    "build": "tsdown"
  },
  "files": [
    "dist",
    "LICENSE",
    "README.md",
    "CHANGELOG.md",
    "package.json"
  ],
  "keywords": [
    "lint",
    "yaml",
    "linter",
    "yamllint",
    "port"
  ],
  "bin": {
    "yamllint-js": "dist/main.mjs",
    "yamllint": "dist/main.mjs"
  },
  "types": "./dist/index.d.mts",
  "exports": {
    "./package.json": "./package.json",
    ".": "./dist/index.mjs",
    "./internal": "./dist/internal.mjs"
  },
  "dependencies": {
    "cosmiconfig": "^9.0.0",
    "iconv-lite": "^0.7.2",
    "ignore": "^7.0.5",
    "recheck": "^4.5.0",
    "yaml": "^2.8.2",
    "yargs": "^18.0.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@stylistic/eslint-plugin": "^5.7.1",
    "@types/node": "^24.10.13",
    "@types/yargs": "^17.0.35",
    "@vitest/coverage-v8": "^4.0.18",
    "@vitest/ui": "^4.0.18",
    "eslint": "^9.39.2",
    "jiti": "^2.6.1",
    "markdownlint-cli2": "^0.20.0",
    "standard-version": "^9.5.0",
    "tsdown": "^0.20.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0",
    "vitest": "^4.0.18"
  },
  "engines": {
    "node": ">=20"
  }
}
