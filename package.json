{
  "name": "@kimzuni/yamllint",
  "description": "A linter for YAML files â€” an unofficial native Node.js port of Python yamllint.",
  "version": "1.0.0",
  "license": "GPL-3.0-or-later",
  "type": "module",
  "author": {
    "name": "kimzuni",
    "email": "me@zuni.kim",
    "url": "https://github.com/kimzuni"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kimzuni-labs/yamllint.git"
  },
  "homepage": "https://github.com/kimzuni-labs/yamllint",
  "bugs": "https://github.com/kimzuni-labs/yamllint/issues",
  "scripts": {
    "test": "NODE_ENV=test tsx --test",
    "test:all": "NODE_ENV=test tsx --test tests/*.test.ts tests/rules/*.test.ts",
    "lint": "markdownlint-cli2 && eslint .",
    "lint:eslint": "eslint .",
    "lint:markdown": "markdownlint-cli2",
    "build": "tsdown",
    "local:test:matrix": "# bun test && nvm use v20 && npm run test:all && nvm use v22 && npm run test && nvm use v24 && npm run test && bun lint"
  },
  "files": [
    "dist",
    "LICENSE",
    "README.md",
    "package.json"
  ],
  "keywords": [
    "lint",
    "yaml",
    "linter",
    "yamllint",
    "port"
  ],
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "dependencies": {
    "cosmiconfig": "9.0.0",
    "fast-glob": "3.3.3",
    "iconv-lite": "0.7.1",
    "ignore": "7.0.5",
    "recheck": "4.5.0",
    "yaml": "2.8.2",
    "yargs": "18.0.0",
    "zod": "4.2.1"
  },
  "devDependencies": {
    "@commitlint/cli": "20.2.0",
    "@commitlint/config-conventional": "20.2.0",
    "@commitlint/types": "20.2.0",
    "@eslint/js": "9.39.2",
    "@stylistic/eslint-plugin": "5.6.1",
    "@types/bun": "1.3.5",
    "@types/yargs": "17.0.35",
    "eslint": "9.39.2",
    "husky": "9.1.7",
    "jiti": "2.6.1",
    "markdownlint-cli2": "0.20.0",
    "standard-version": "9.5.0",
    "tsdown": "0.18.1",
    "tsx": "4.21.0",
    "typescript": "5.9.3",
    "typescript-eslint": "8.50.0"
  },
  "engines": {
    "node": ">=20"
  }
}
