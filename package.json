{
  "name": "yamllint-js",
  "description": "A linter for YAML files â€” an unofficial native Node.js port of Python yamllint.",
  "version": "0.1.0",
  "license": "GPL-3.0-or-later",
  "type": "module",
  "author": {
    "name": "kimzuni",
    "email": "me@zuni.kim",
    "url": "https://github.com/kimzuni"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kimzuni-labs/yamllint-js.git"
  },
  "homepage": "https://github.com/kimzuni-labs/yamllint-js",
  "bugs": "https://github.com/kimzuni-labs/yamllint-js/issues",
  "scripts": {
    "test": "NODE_ENV=test tsx --test",
    "test:all": "NODE_ENV=test tsx --test tests/*.test.ts tests/rules/*.test.ts",
    "test:coverage": "bun test --coverage --coverage-reporter=lcov",
    "lint": "markdownlint-cli2 && npm run lint:yaml && eslint .",
    "lint:eslint": "eslint .",
    "lint:markdown": "markdownlint-cli2",
    "lint:yaml": "tsx src/cli.ts -c yamllint.self.config.js .",
    "build": "tsdown",
    "local:test:matrix": "# bun test && nvm use v20 && npm run test:all && nvm use v22 && npm run test && nvm use v24 && npm run test && bun lint"
  },
  "files": [
    "dist",
    "LICENSE",
    "README.md",
    "CHANGELOG.md",
    "package.json"
  ],
  "keywords": [
    "lint",
    "yaml",
    "linter",
    "yamllint",
    "port"
  ],
  "bin": {
    "yamllint": "dist/main.mjs"
  },
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./dist/index.d.mts",
      "import": "./dist/index.mjs"
    }
  },
  "dependencies": {
    "cosmiconfig": "^9.0.0",
    "fast-glob": "^3.3.3",
    "iconv-lite": "^0.7.2",
    "ignore": "^7.0.5",
    "recheck": "^4.5.0",
    "yaml": "^2.8.2",
    "yargs": "^18.0.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@stylistic/eslint-plugin": "^5.7.1",
    "@types/bun": "^1.3.8",
    "@types/yargs": "^17.0.35",
    "eslint": "^9.39.2",
    "jiti": "^2.6.1",
    "markdownlint-cli2": "^0.20.0",
    "standard-version": "^9.5.0",
    "tsdown": "^0.20.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0"
  },
  "engines": {
    "node": ">=20"
  }
}
